<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">#D3D3D3</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">#70E8E8E8</item>
        <item name="android:fontFamily">@font/arvo</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="prefix" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="titleMarginTop">2dp</item>
    </style>
    <style name="suffix" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14dp</item>
        <item name="titleMarginTop">2dp</item>
    </style>
    <style name="CustomDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="Theme.InstagramProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.InstagramProject.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.InstagramProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>